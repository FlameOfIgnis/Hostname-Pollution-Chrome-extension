{
    "name": "Hostname changer",
    "version": "1.0",
    "description": "Quick extension for changing hostname on http requests.",
    "manifest_version": 2,
    "permissions": [
          "<all_urls>","webRequest","webRequestBlocking"
        ],
    "background": {
      "scripts": ["background.js"],
      "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html"
    }
}